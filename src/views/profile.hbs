<div class="container profile-page">
  <h1>My Profile</h1>

  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}
  {{#if error}}
    <div class="alert alert-error">{{error}}</div>
  {{/if}}

  <div class="profile-grid">
    <section class="card">
      <h2>Details</h2>
      <div class="profile-row"><span class="label">Name:</span><span>{{userDetails.name}}</span></div>
      <div class="profile-row"><span class="label">Email:</span><span>{{userDetails.email}}</span></div>
      <div class="profile-row"><span class="label">Role:</span><span class="badge">{{userDetails.role}}</span></div>
    </section>

    <section class="card">
      <h2>Change Password</h2>
      <form action="/profile/change-password" method="POST" class="form">
        <div class="form-group">
          <label for="currentPassword">Current Password</label>
          <input type="password" id="currentPassword" name="currentPassword" required />
        </div>
        <div class="form-group">
          <label for="newPassword">New Password</label>
          <input type="password" id="newPassword" name="newPassword" required />
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm New Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" required />
        </div>
        <button type="submit" class="btn btn-dark">Update Password</button>
      </form>
    </section>
  </div>
</div>
